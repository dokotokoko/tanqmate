# Supabase設定
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_KEY=your-supabase-anon-key

# OpenAI API設定
OPENAI_API_KEY=your-openai-api-key

# CORS設定（Docker環境では通常false）
ENABLE_CORS=false

# 対話エージェント設定
# 対話エージェント機能を有効化（デフォルト: false）
ENABLE_CONVERSATION_AGENT=true

# チャット設定
# チャット履歴のデフォルト取得件数
CHAT_HISTORY_LIMIT_DEFAULT=50
# チャット履歴の最大取得件数
CHAT_HISTORY_LIMIT_MAX=100
# チャットメッセージの最大文字数
MAX_CHAT_MESSAGE_LENGTH=2000

# レート制限設定
# チャットAPIのレート制限を有効化
ENABLE_CHAT_RATE_LIMIT=true
# レート制限のウィンドウ（秒）
CHAT_RATE_LIMIT_WINDOW_SEC=60
# ウィンドウ内の最大リクエスト数
CHAT_RATE_LIMIT_MAX=20

# JWT設定（オプション）
# JWT_SECRET_KEY=your-jwt-secret
# JWT_ALGORITHM=HS256

# パスワード設定（オプション）
# PASSWORD_HASH_ALGORITHM=bcrypt

# チャット応答最適化設定（フェーズ1）
DEFAULT_MAX_TOKENS=300          # 通常モード（organize, expand, ideas）の最大トークン数
                                # 約400文字に相当。research, deepenは制限なし

# チャット応答最適化設定（フェーズ2）
ENABLE_CLARIFICATION=true       # 質問明確化機能の有効化